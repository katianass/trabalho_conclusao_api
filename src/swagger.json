{
  "openapi": "3.0.0",
  "info": {
    "title": "API Usuários e Produtos",
    "version": "1.0.0",
    "description": "API para login, registro, consulta de usuários e produtos."
  },
  "paths": {
    "/api/rest/auth/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "phone": { "type": "string" }
                },
                "required": ["name", "email", "password", "phone"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado" },
          "400": { "description": "Validação de campos" },
          "409": { "description": "Erro de validação ou usuário já existe" }
        }
      }
    },
    "/api/rest/auth/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login bem-sucedido" },
          "400": { "description": "Campos invalidos" },
          "401": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/api/rest/users": {
      "get": {
        "summary": "Listar todos usuários",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de usuários" },
          "401": { "description": "Não Autorizado" }
        }
      }
    },
    "/api/rest/users/:id": {
      "get": {
        "summary": "Recuperar usuário pelo identificador",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Retorna usuário" },
          "401": { "description": "Não Autorizado" },
          "404": { "description": "Não encontrado" }
        }
      }
    },

    "/api/rest/products": {
      "post": {
        "summary": "Cria um novo produto",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["name", "price", "description"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Produto criado com sucesso" },
          "400": { "description": "Validação de campos" },
          "401": { "description": "Não Autorizado" }
        }
      },
      "get": {
        "summary": "Listar todos os produtos",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista todos os produtos" },
          "401": { "description": "Não Autorizado" }
        }
      }
    },
    "/api/rest/products/:id": {
      "get": {
        "summary": "Recuperar produto pelo identificador",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Retorna produto" },
          "401": { "description": "Não Autorizado" },
          "404": { "description": "Não encontrado" }
        }
      },
      "delete": {
        "summary": "Remove produto pelo identificador",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Remove produto" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Não encontrado" }
        }
      },
      "put": {
        "summary": "Atualiza dados do produto pelo identificador",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Retorna mensagem de produto atualizado" },
          "401": { "description": "Não autorizado" },
          "404": { "description": "Não encontrado" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
